@model List<Comic>

@{
    ViewData["Title"] = "Comics";
}

<h1 style="text-align: center;" class="text-primary">
    Comics SQL y Oracle
</h1>

@Html.ActionLink("Create Comic", "Insert", "Comics", null, new { @class = "btn btn-primary my-2", style = "font-weight: bold;"})

<table class="table table-dark table-bordered">
    <thead>
        <tr style="text-align: center;">
            <th>ID</th>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Comic comic in Model) {
            <tr>
                <td style="text-align: center;">@comic.IdComic</td>
                <td>@comic.Nombre</td>
                <td>
                    <img src="@comic.Imagen" style="width: 9vw;"/>
                </td>
                <td>@comic.Descripcion</td>
            </tr>
        }
    </tbody>
</table>